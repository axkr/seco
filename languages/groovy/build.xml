<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="Seco Groovy">
	<description>Seco Groovy Language Support Build File</description>

	<property name="version" value="1.0" />
	<property name="jar-name" value="seco-groovy.jar"/>	
	<!-- Path to seco.jar -->
	<!--<property name="seco.jar" value="../${basedir}/seco.jar" />-->
	<!-- The directory containing library jar files -->
	<property name="lib" value="${basedir}/jars" />

	<!-- The directory containing source code -->
	<property name="src" value="${basedir}/src" />

	<!-- The directory containing distribution jar -->
	<property name="dist" value="${basedir}/dist" />
	
	<!-- Any file generated by a build target should go in the build dir. -->
	<property name="build" value="${basedir}/build" />

	<!-- classpath for compiling-->
	<path id="classpath">
		<fileset dir="jars">
			<include name="**/*.jar" />
		</fileset>
		<!--seco jar is there-->
		<fileset dir="../../core/build/seco">
		   <include name="**/*.jar"/>
		</fileset>
		<pathelement path="${java.class.path}" />
	</path>


	<target name="timestamp">
		<!-- Create the time stamp -->
		<tstamp />
	</target>

	<target name="init" depends="timestamp">
		<mkdir dir="${build}" />
        <mkdir dir="${build}/compile" />
  		<mkdir dir="${dist}" />
	</target>

	<target name="compile" depends="init" description="compile the Seco source">
		<javac source="1.5" classpathref="classpath" debug="on" destdir="${build}/compile" srcdir="${src}">
		</javac>
	</target>

	<target name="jars-prepare" depends="init" description="Copy resource files to build directory.">
		<!-- Copy all resources from source tree to build tree -->
		<copy todir="${build}/compile">
			<fileset dir="${src}">
				<exclude name="META-INF/**" />
				<include name="**/*.class" />
				<include name="**/*.png" />
				<include name="**/*.gif" />
			</fileset>
	    </copy>
	</target>

	<target name="jars" depends="compile, jars-prepare" description="Build Groovy Jar file.">
		<jar basedir="${build}/compile" jarfile="${dist_jars}/${jar-name}">
			<exclude name="**/*.jar" />
			<exclude name="**/*.bak" />
		</jar>
	</target>

	<target name="dist" depends="compile, jars-prepare" description="Build Jar file.">
		<jar jarfile="${dist}/${jar-name}">
			<fileset dir="${build}/compile" excludes="**/*.jar, **/*.bak"/>  
			<zipgroupfileset dir="${lib}" includes="*.jar" />
		</jar>
	</target>

    <target description="clean up" name="clean">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>

</project>
