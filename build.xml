<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="Seco">
	<description>Seco Build File</description>

	<property name="version" value="1.0" />
	<property name="jar-name" value="seco.jar"/>
	
	<!-- The directory containing library jar files -->
	<property name="lib" value="${basedir}/lib" />

	<!-- The directory containing source code -->
	<property name="src" value="${basedir}/src" />

	<!-- The directory containing distribution files -->
	<property name="dist" value="${basedir}/dist" />

	<!-- Any file generated by a build target should go in the build dir. -->
	<property name="build" value="${basedir}/build" />

	<!-- classpath for compiling-->
	<path id="classpath">
		<fileset dir="lib">
			<include name="**/*.jar" />
		</fileset>

		<pathelement path="${java.class.path}" />
	</path>


	<target name="timestamp">
		<!-- Create the time stamp -->
		<tstamp />
	</target>

	<target name="init" depends="timestamp">
		<mkdir dir="${build}" />
        <mkdir dir="${build}/compile" />
        <mkdir dir="${build}/seco" />
		<mkdir dir="${dist}" />
	</target>

	<target name="compile" depends="init" description="compile the Seco source">
		<javac source="1.5" classpathref="classpath" debug="on" destdir="${build}/compile" srcdir="${src}">
		</javac>
	</target>

	<target name="jars-prepare" depends="init" description="Copy resource files to build directory.">
		<!-- Copy all resources from source tree to build tree -->
		<copy todir="${build}/compile">
			<fileset dir="${src}">
				<exclude name="META-INF/**" />
				<include name="**/*.class" />
				<include name="**/*.png" />
				<include name="**/*.gif" />
				<include name="**/*.properties" />
				<include name="**/*.xml" />
				<include name="**/*.dtd" />
				<include name="**/.txt" />
                <include name="**/*.scm"/>
                <include name="**/*.json"/>
			</fileset>
	    </copy>
		<available property="manifest_generated" file="${build}/seco.manifest" />
	</target>

	<target name="jars" depends="compile, jars-prepare, generate_manifest" description="Build Seco Jar file.">
		<jar basedir="${build}/compile" jarfile="${build}/seco/${jar-name}" manifest="${build}/seco.manifest">
			<exclude name="**/*.jar" />
			<exclude name="**/*.bak" />
		</jar>
	</target>

	<target name="dist-prepare" depends="jars" description="Copy distribution files for zip.">
		<copy todir="${build}/seco">
			<fileset dir=".">
				<include name="lib/**" />
				<include name="run.**" />
				<include name="Readme.txt" />
				<include name="LicensingInformation" />
			</fileset>
		</copy>
        <copy todir="${build}/seco">
            <fileset dir=".">
                <include name="examples/**"/>
            </fileset>
        </copy>        
	</target>

	<target name="dist-win" depends="dist-prepare" description="Build Windows distribution">
		<zip zipfile="${dist}/seco-dist-win-${version}.zip">
			<fileset dir="${build}">
				<include name="seco/**" />
				<exclude name="seco/run.sh" />
				<exclude name="seco/lib/native/linux/**" />
			</fileset>
		</zip>
	</target>

	<target name="dist-linux" depends="dist-prepare" description="Build Linux distribution">
		<tar destfile="${dist}/seco-dist-lin-${version}.tar"
		     basedir="dist">
			<tarfileset dir="${build}">
				<include name="seco/**" />
				<exclude name="seco/run.cmd" />
				<exclude name="seco/lib/native/windows/**" />
			</tarfileset>
         </tar>
         <gzip src="${dist}/seco-dist-lin-${version}.tar"
               destfile="${dist}/seco-dist-lin-${version}.tgz"/>
	</target>


	<target description="clean up" name="clean">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>

	<!-- ======================================================= -->
	<!-- Manfiest Target                                         -->
	<!-- Automatically creates Seco Manifest File, based on -->
	<!-- JAR Files located in lib                      -->
	<!-- ======================================================= -->
	<target name="generate_manifest" depends="init" unless="manifest_generated">
		<echo>
           Creating Seco Manifest File
        </echo>
		<mkdir dir="${build}" />

		<javac destdir="${build}" srcdir="${src}" includeAntRuntime="false" nowarn="off" debug="true" source="1.5" optimize="on">
			<classpath refid="classpath" />
			<include name="seco/ManifestCreator.java" />
		</javac>

		<delete file="${build}/seco.manifest" />
		<java fork="true" classname="seco.ManifestCreator" output="${build}/seco.manifest">
			<classpath path="${build}" />
			<arg value="${lib}" />
		</java>
	</target>
</project>
